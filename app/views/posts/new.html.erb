<h2>Create a new Post </h2>
<%= form_for(@post) do |f| %>
  <%= render 'shared/error_messages_posts' %>
  <div class="field">
    <%=f.label :content, "Post Content"%>
    <%= f.text_area :content, placeholder: "Compose new post..." %>
    <%= f.file_field :picture %>
  </div>
  <%= f.submit "Post", class: "btn btn-primary" %>
<% end %>
